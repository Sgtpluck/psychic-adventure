<h1>
  {{ name }} 
</h1>

<div class='row'>
  <div class='col-lg-8'>
    <img {{ bind-attr src=image }} width="800px" height="600px" class='thumbnail col-lg-12' >
  </div>
  <div class='col-lg-4'>
    {{ description }}<br><br>
    ${{ format-price price }}<br>
    <a href="#" {{ action 'addToCart' this }}>Add To Cart!</a>
  </div>
</div>